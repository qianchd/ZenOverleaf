{
  "manifest_version": 3,
  "name": "ZenOverleaf",
  "version": "1.2.0",
  "description": "Zen mode for Overleaf and TexPage (Toggle Sidebar, Header, Fullscreen)",
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.overleaf.com/*",
        "https://www.texpage.com/*"
      ],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ]
}