{
  "manifest_version": 3,
  "name": "ZenOverleaf",
  "version": "1.2.3",
  "description": "Zen mode for Overleaf and TexPage (Toggle Sidebar, Header, Fullscreen)",
  "icons": {
    "32": "icon.png",
    "64": "icon.png",
    "128": "icon.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "zenoverleaf@github.com",
      "strict_min_version": "109.0",
      "data_collection_permissions": {
        "required": ["none"]
      }
    }
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.overleaf.com/*",
        "https://www.texpage.com/*"
      ],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ]
}